<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_user_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ViewDetailsActivity"
    android:background="#06141B">

    <!-- Title for User Details -->
    <TextView
        android:id="@+id/title_user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Details"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/title_user_details"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- User Phone -->
    <TextView
        android:id="@+id/text_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/text_user_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- User Email -->
    <TextView
        android:id="@+id/text_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/text_user_phone"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- User Address -->
    <TextView
        android:id="@+id/text_user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/text_user_email"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title for Courses Selected -->
    <TextView
        android:id="@+id/title_courses_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses Selected"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_user_address"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Courses List (Selected) -->
    <TextView
        android:id="@+id/text_courses_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No courses selected."
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/title_courses_selected"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Total Price -->
    <TextView
        android:id="@+id/text_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: R0.00"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/text_courses_selected"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
